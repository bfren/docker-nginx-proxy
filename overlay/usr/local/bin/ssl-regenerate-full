#!/usr/bin/with-contenv bash

set -euo pipefail


#======================================================================================================================
# Delete SSL files and reinitialise
#======================================================================================================================

ssl-regenerate

bcg-echo "Removing SSL configuration..."
bcg-rmrf "${SSL_DHPARAM}"
bcg-rmrf "${SSL_GLOBAL_CFG}"
bcg-rmrf "${SSL_ACCOUNT_KEY}"
bcg-done

ssl-init
