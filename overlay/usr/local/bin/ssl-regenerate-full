#!/usr/bin/with-contenv bash

set -euo pipefail


#======================================================================================================================
# Delete SSL files and reinitialise
#======================================================================================================================

bcg-echo "Removing SSL certificates and configuration..."
bcg-rmrf "${SSL_CERTS}/*"
bcg-done

bcg-echo "Removing DH parameters..."
bcg-rmrf "${SSL_DHPARAM}"
bcg-done

ssl-init 0
ssl-request
