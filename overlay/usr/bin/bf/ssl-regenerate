#!/command/with-contenv bash

set -euo pipefail
export BF_E=`basename ${0}`


#======================================================================================================================
# Delete SSL files and reinitialise.
#======================================================================================================================

bf-echo "Removing SSL certificates and configuration..."
bf-rmrf "${PROXY_SSL_CERTS}/*"
bf-done

cd ${PROXY_LIB}
s6-setuidgid www ./init && ./request
nginx-reload
