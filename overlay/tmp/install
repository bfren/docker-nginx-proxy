#!/bin/sh

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# Install packages.
#======================================================================================================================

bcg-echo "Installing packages..."
apk add --no-cache \
    bash \
    curl \
    openssl
bcg-done


#======================================================================================================================
# Cleanup.
#======================================================================================================================

bcg-debug "Cleanup Nginx sites definitions."
rm -rf /etc/nginx/sites
bcg-done


#======================================================================================================================
# Linking Nginx directories to volumes.
#======================================================================================================================

bcg-debug "Linking Nginx directories to volumes."
ln -s /ssl/certs /etc/ssl/certs
ln -s /sites /etc/nginx/sites
