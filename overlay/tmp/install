#!/bin/sh

set -euo pipefail
export BCG_E=`basename ${0}`


#======================================================================================================================
# Install packages.
#======================================================================================================================

bcg-echo "Installing packages..."
apk add --no-cache \
    bash \
    curl \
    openssl
bcg-done


#======================================================================================================================
# Cleanup.
#======================================================================================================================

bcg-debug "Cleaning up Nginx sites definitions."
rm -rf /etc/nginx/sites
bcg-done


#======================================================================================================================
# Create and link Nginx directories.
#======================================================================================================================

bcg-debug "Creating and linking Nginx directories."

mkdir /sites
ln -s /sites /etc/nginx/sites

mkdir -p /ssl/certs
ln -s /ssl/certs /etc/ssl/certs
