#!/usr/bin/with-contenv bash

#======================================================================================================================
# Run checks
#======================================================================================================================

source ${INC}/check.sh


#======================================================================================================================
# Request certificates for all domains
#   -U stop upgrade checks
#   -w set working directory
#======================================================================================================================

request() { /etc/ssl/getssl -U -w ${SSL_CERTS} ${1} ; }

_echo "Requesting SSL certificates..."
request "${PROXY_URI}"
for DN in "${!DOMAINS[@]}" ; do
    _echo " .. ${DN}"
    request ${DN}
done
_done
