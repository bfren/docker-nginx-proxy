#!/usr/bin/with-contenv bash

set -euo pipefail


#======================================================================================================================
# Run checks
#======================================================================================================================

source ${INC}/check.sh


#======================================================================================================================
# Run update
#   -U stop upgrade checks
#   -w set working directory
#   -a check all certificates
#======================================================================================================================

_echo "Updating all SSL certificates..."
/etc/ssl/getssl -U -w ${SSL_CERTS} -a
_done
