#!/usr/bin/with-contenv bash

#======================================================================================================================
# Run checks
#======================================================================================================================

source ${INC}/check.sh


#======================================================================================================================
# Run update
#   -U stop upgrade checks
#   -w set working directory
#   -a check all certificates
#======================================================================================================================

bcg-echo "Updating all SSL certificates..."
/etc/ssl/getssl -U -w ${SSL_CERTS} -a
bcg-done
