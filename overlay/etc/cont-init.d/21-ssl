#!/usr/bin/with-contenv bash

set -euo pipefail


#======================================================================================================================
# Check for clean install
#======================================================================================================================

if [ "${CLEAN_INSTALL}" = "1" ] ; then

    bcg-echo "Clean install detected..."
    bcg-rmrf "${SSL_GLOBAL_CFG}"
    bcg-rmrf "${SSL_CERTS}/*"
    bcg-rmrf "${SITES}/*"
    bcg-done

fi


#======================================================================================================================
# Run initialisation script
#======================================================================================================================

ssl-init
